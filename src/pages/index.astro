---
import { getPosts } from '../lib/wp.js';

const initialPosts = await getPosts();
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WordPress Posts in Astro</title>
</head>
<body>
  <h1>Latest Posts</h1>
  <ul id="post-list">
    {initialPosts.map(post => (
      <li key={post.id}>
        <h2>{post.title.rendered}</h2>
        <p set:html={post.excerpt.rendered}></p>
      </li>
    ))}
  </ul>

  <script>
    async function fetchPosts() {
      const response = await fetch('https://dev-fit-quest-challenge.pantheonsite.io/wp-json/wp/v2/posts');
      const posts = await response.json();
      const postList = document.getElementById('post-list');
      postList.innerHTML = posts.map(post => `
        <li>
          <h2>${post.title.rendered}</h2>
          <p>${post.excerpt.rendered}</p>
        </li>
      `).join('');
    }

    setInterval(fetchPosts, 5000); // Refresh posts every 5 seconds
  </script>
</body>
</html>
